<form
    id="js-address-delete-form-{{ address.id }}"
    method="post"
    action="{{ path('app_address_delete', { id: address.id }) }}"
>
    <input
        type="hidden"
        name="_token"
        value="{{ csrf_token('delete' ~ address.id) }}"
    />
    <a
        class="btn btn-sm btn-outline-danger"
        type="submit"
        onclick="event.preventDefault();confirm('Are you sure you want to delete this item ?') && document.getElementById('js-address-delete-form-{{
            address.id
        }}').submit()"
    >
        Remove
    </a>
</form>
