{% extends './admin/index.html.twig' %} {% block content %}
<div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-5 border-bottom"
>
    <h1 class="h2">Plats</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_product_new') }}" class="add text-white">
            <i class="fa fa-plus"></i> Ajouter
        </a>
    </div>
</div>
<div class="table-responsive">
    <h5>Total : {{ plats | length }}</h5>
    <br />
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Categorie</th>
                <th>Price</th>
                <th>Size</th>
                <th>Promo</th>
                <th>Sauce</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for product in plats %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>
                    {{ product.description | u.truncate(50, '...', false) }}
                </td>
                <td>{{ product.category.name }}</td>
                <td>{{ product.price }} Dhs</td>
                <td>
                    <div class="custom-control custom-switch">
                        <input type="checkbox"
                        {{ product.size ? "checked" : "" }}
                        class="custom-control-input" disabled
                        id="customSwitch1">
                        <label
                            class="custom-control-label"
                            for="customSwitch1"
                        ></label>
                    </div>
                </td>
                <td>
                    <div class="custom-control custom-switch">
                        <input type="checkbox"
                        {{ product.promotion ? "checked" : "" }}
                        class="custom-control-input" disabled
                        id="customSwitch2">
                        <label
                            class="custom-control-label"
                            for="customSwitch2"
                        ></label>
                    </div>
                </td>
                <td>
                    <div class="custom-control custom-switch">
                        <input type="checkbox"
                        {{ product.sauce ? "checked" : "" }}
                        class="custom-control-input" disabled
                        id="customSwitch4">
                        <label
                            class="custom-control-label"
                            for="customSwitch4"
                        ></label>
                    </div>
                </td>
                <td>
                    <img
                        src="{{vich_uploader_asset(product) | imagine_filter('squared_thumbnail_small')}}"
                        alt=""
                    />
                </td>
                <td>
                    <div class="d-flex">
                        <div class="mr-2">
                            <a
                                class="btn btn-sm btn-success"
                                href="{{
                                    path('app_product_show', { id: product.id })
                                }}"
                                ><i class="fa fa-eye"></i
                            ></a>
                        </div>
                        <div class="mr-2">
                            <a
                                class="btn btn-sm btn-primary"
                                href="{{
                                    path('app_product_edit', { id: product.id })
                                }}"
                                ><i class="fa fa-pencil-alt"></i
                            ></a>
                        </div>
                        <div>
                            {{
                                include(
                                    "admin/plats/actions/_delete_form.html.twig"
                                )
                            }}
                        </div>
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
