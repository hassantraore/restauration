<form
    id="js-product-delete-form-{{ product.id }}"
    method="post"
    action="{{ path('app_product_delete', { id: product.id }) }}"
>
    <input
        type="hidden"
        name="_token"
        value="{{ csrf_token('delete' ~ product.id) }}"
    />
    <a
        class="text-decoration-none btn btn-sm btn-danger"
        href=""
        onclick="event.preventDefault(); confirm('Are you sure you want to delete this item?') && document.getElementById('js-product-delete-form-{{
            product.id
        }}').submit()"
        ><i class="fa fa-trash-alt"></i
    ></a>
</form>
