<form
    id="js-report-delete-form-{{ report.id }}"
    method="post"
    action="{{ path('app_report_delete', { id: report.id }) }}"
>
    <input
        type="hidden"
        name="_token"
        value="{{ csrf_token('delete' ~ report.id) }}"
    />
    <a
        class="text-decoration-none btn btn-sm btn-danger"
        href=""
        onclick="event.preventDefault(); confirm('Are you sure you want to delete this item?') && document.getElementById('js-product-delete-form-{{
            report.id
        }}').submit()"
        ><i class="fa fa-trash-alt"></i
    ></a>
</form>
