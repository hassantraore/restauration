<form
    id="js-ingredient-delete-form-{{ ingredient.id }}"
    method="post"
    action="{{ path('app_ingredient_delete', { id: ingredient.id }) }}"
>
    <input
        type="hidden"
        name="_token"
        value="{{ csrf_token('delete' ~ ingredient.id) }}"
    />
    <a
        class="text-decoration-none btn btn-sm btn-danger"
        type="submit"
        onclick="event.preventDefault();confirm('Are you sure you want to delete this item ?') && document.getElementById('js-ingredient-delete-form-{{
            ingredient.id
        }}').submit()"
    >
        <i class="fa fa-trash-alt"></i>
    </a>
</form>
