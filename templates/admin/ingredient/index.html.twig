{% extends './admin/index.html.twig' %} {% block content %}
<div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-5 border-bottom"
>
    <h1 class="h2">Ingredients</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_ingredient_new') }}" class="add text-white">
            <i class="fa fa-plus"></i> Ajouter
        </a>
    </div>
</div>
<div class="table-responsive">
    <h5>Total : {{ ingredients | length }}</h5>
    <br />
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.name }}</td>
                <td>
                    <div class="d-flex">
                        <div class="mr-2">
                            <a
                                class="btn btn-sm btn-primary"
                                href="{{
                                    path('app_ingredient_edit', {
                                        id: ingredient.id
                                    })
                                }}"
                                ><i class="fa fa-pencil-alt"></i
                            ></a>
                        </div>
                        <div>
                            {% include
                            "admin/ingredient/actions/_delete_form.html.twig"
                            with {ingredient:ingredient} only %}
                        </div>
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
