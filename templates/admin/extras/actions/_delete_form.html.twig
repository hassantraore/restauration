<form
    id="js-extras-delete-form-{{ extra.id }}"
    method="post"
    action="{{ path('app_extras_delete', { id: extra.id }) }}"
>
    <input
        type="hidden"
        name="_token"
        value="{{ csrf_token('delete' ~ extra.id) }}"
    />
    <a
        class="text-decoration-none btn btn-sm btn-danger"
        type="submit"
        onclick="event.preventDefault();confirm('Are you sure you want to delete this item ?') && document.getElementById('js-extras-delete-form-{{
            extra.id
        }}').submit()"
    >
        <i class="fa fa-trash-alt"></i>
    </a>
</form>
