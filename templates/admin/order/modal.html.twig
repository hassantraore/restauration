<div
    class="modal fade bd-example-modal-lg"
    id="adminOrderModal{{ order.id }}"
    role="dialog"
    tabindex="-1"
    aria-labelledby="exampleModalLabel{{ order.id }}"
    aria-hidden="true"
    data-backdrop="static"
>
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="d-flex justify-content-end mb-3">
                    <a
                        class="text-decoration-none text-dark pointer bg-white"
                        data-dismiss="modal"
                        style="
                            width: 40px;
                            height: 40px;
                            border-radius: 100%;
                            display: flex;
                            justify-content: center;
                            align-items: center;
                        "
                    >
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="main-content p-3">
                    <h4 class="text-center mb-5">Commande No {{ order.id }}</h4>
                    <div class="mb-4">
                        <h5 class="mb-4" style="font-weight: 900">
                            Changez le status
                        </h5>
                        <div class="form-check">
                            <input
                                class="form-check-input"
                                type="radio"
                                name="{{ order.id }}-admin-order-status"
                                id="{{ order.id }}-admin-order-status-en_cours"
                                value="En cours"
                            />
                            <label
                                class="form-check-label"
                                for="{{ order.id }}-admin-order-status-en_cours"
                            >
                                En cours
                            </label>
                        </div>
                        <div class="form-check">
                            <input
                                class="form-check-input"
                                type="radio"
                                name="{{ order.id }}-admin-order-status"
                                id="{{ order.id }}-admin-order-status-Livrée"
                                value="Livrée"
                            />
                            <label
                                class="form-check-label"
                                for="{{ order.id }}-admin-order-status-Livrée"
                            >
                                Livrée
                            </label>
                        </div>
                    </div>
                    {% if order.paymentMethod == 'especes' %}
                    <div class="mb-4">
                        <h5 class="mb-4" style="font-weight: 900">
                            Changez l'état de paiement
                        </h5>
                        <div class="form-check">
                            <input
                                class="form-check-input"
                                type="radio"
                                name="{{ order.id }}-admin-order-paiement"
                                id="{{ order.id }}-admin-order-paiement-0"
                                value="0"
                            />
                            <label
                                class="form-check-label"
                                for="{{ order.id }}-admin-order-paiement-0"
                            >
                                Non payé
                            </label>
                        </div>
                        <div class="form-check">
                            <input
                                class="form-check-input"
                                type="radio"
                                name="{{ order.id }}-admin-order-paiement"
                                id="{{ order.id }}-admin-order-paiement-1"
                                value="1"
                            />
                            <label
                                class="form-check-label"
                                for="{{ order.id }}-admin-order-paiement-1"
                            >
                                Payé
                            </label>
                        </div>
                    </div>
                    {% endif %}

                    <hr />
                    <button
                        class="btn btn-block"
                        data-dismiss="modal"
                        style="background-color: #ffbe33"
                        onclick="changeStatus({{ order.id }}); changePayment({{
                            order.id
                        }})"
                    >
                        Ajouter
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
