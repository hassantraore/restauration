<form
    id="js-category-delete-form-{{ category.id }}"
    method="post"
    action="{{ path('app_category_delete', { id: category.id }) }}"
>
    <input
        type="hidden"
        name="_token"
        value="{{ csrf_token('delete' ~ category.id) }}"
    />
    <a
        class="text-decoration-none btn btn-sm btn-danger"
        type="submit"
        onclick="event.preventDefault();confirm('Are you sure you want to delete this item ?') && document.getElementById('js-category-delete-form-{{
            category.id
        }}').submit()"
    >
        <i class="fa fa-trash-alt"></i>
    </a>
</form>
