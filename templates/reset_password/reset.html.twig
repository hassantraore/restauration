{% extends 'base.html.twig' %} {% block title %}Log in!{% endblock %} {% block
main %}
<!--====== SIGNIN ONE PART START ======-->
<main class="sub_page p-5">
    <section class="signin-area signin-one">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="mb-5">
                        <h1 class="text-center">Reset your password</h1>
                    </div>
                    {{
                        form_start(resetForm, {
                            attr: {
                                novalidate: "novalidate"
                            }
                        })
                    }}
                    <div class="signin-form form-style-two rounded-buttons">
                        <div class="row">
                            {% for flash_error in
                            app.flashes('reset_password_error') %}
                            <div class="col-md-12">
                                <div
                                    class="form-input alert alert-danger"
                                    role="alert"
                                >
                                    {{ flash_error }}
                                </div>
                            </div>
                            {% endfor %}
                            <div class="col-md-12">
                                <div class="form-input">
                                    {{ form_row(resetForm.plainPassword) }}
                                </div>
                                <!-- form input -->
                            </div>
                            <div class="col-md-12">
                                <div class="form-input rounded-buttons">
                                    <button
                                        class="btn btn-lg btn-block"
                                        style="background-color: #ffbe33"
                                        type="submit"
                                    >
                                        Reset password
                                    </button>
                                </div>
                                <!-- form input -->
                            </div>
                        </div>
                    </div>
                    <!-- signin form -->
                    {{ form_end(resetForm) }}
                </div>
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </section>
    <!--====== SIGNIN ONE PART ENDS ======-->
</main>
{% endblock %}
